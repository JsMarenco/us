---
// Third-party dependencies

// Current project dependencies
import BaseHead from "../components/Common/BaseHead.astro";
import ScrollTop from "../components/Buttons/ScrollTop";
import ThemeSwitcher from "../components/Buttons/ThemeSwitcher";

type Props = {
  title?: string;
  description?: string;
  image?: string;
  containerClassnames?: string;
  bgImage?: string;
};

const { title = "", description = "", image = "", bgImage = "" } = Astro.props;
---

<html lang="es">
  <head>
    <BaseHead description={description} image={image} title={title} />
  </head>

  <body
    class="flex min-h-screen min-w-screen items-center justify-center overflow-hidden text-black transition-colors duration-200 dark:text-white"
  >
    <div id="notifications"></div>

    <main
      class="fixed inset-0 mx-5 flex items-center justify-center"
      transition:animate="fade"
    >
      <slot />
    </main>

    <div
      class="fixed right-4 bottom-4 z-[90] flex flex-col items-center justify-center gap-2"
    >
      <ScrollTop client:load />
      <ThemeSwitcher client:load />
    </div>

    <div
      class="background-moving fixed inset-0 -z-20"
      style={`background-image: url('${bgImage}'); background-size: cover; background-position: center;`}
    >
    </div>

    <div class="fixed inset-0 -z-10 bg-black/70"></div>
  </body>
</html>
